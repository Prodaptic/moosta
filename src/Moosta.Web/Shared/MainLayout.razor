@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class="pa-4">
        <MudLink Href="/">
            <MudImage Src="/img/MoostaLogoWhite.png" Alt="Moosta">
            </MudImage>
        </MudLink>
       <MudSpacer />
        <MudButton Variant="Variant.Text" Link="/ideas">Ideas</MudButton>
        <LoginDisplay />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="ma-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    private MoostaTheme _currentTheme = new MoostaTheme();
}